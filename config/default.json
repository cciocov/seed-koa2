{
  "host": "HOST",
  "port": "PORT",
  "database": {
    "url": "DATABASE_URL",
    "logging": true
  },
  "authentication": {
    "secret": "SECRET",
    "tokenTTL": 86400,
    "local": true,
    "providers": {
      "facebook": {
        "clientID": "FACEBOOK_CLIENT_ID",
        "clientSecret": "FACEBOOK_SECRET",
        "profileFields": [
          "id",
          "name",
          "email",
          "picture.type(square).height(128).width(128)"
        ],
        "scope": ["public_profile", "email"],
        "strategy": {
          "module": "passport-facebook",
          "path": "Strategy",
          "protocol": "oauth2"
        }
      },
      "facebook-token": {
        "configKey": "facebook",
        "strategy": {
          "module": "passport-facebook-token",
          "path": ""
        }
      },
      "google": {
        "clientID": "GOOGLE_CLIENT_ID",
        "clientSecret": "GOOGLE_SECRET",
        "scope": ["profile", "email"],
        "strategy": {
          "module": "passport-google-oauth20",
          "path": "Strategy",
          "protocol": "oauth2"
        }
      },
      "google-token": {
        "configKey": "google",
        "strategy": {
          "module": "passport-google-token"
        }
      }
    }
  },
  "public": {
    "path": "../public",
    "maxage": 0
  },
  "views": {
    "path": "../views",
    "map": {
      "html": "handlebars"
    },
    "options": {
      "pretty": true
    },
    "defaultExt": "pug"
  },
  "middleware": [
    "$routeInfo",
    "auth",
    "$actionMiddleware",
    "$action"
  ],
  "permissions": [
    "-- only append to this array, nothing else --",
    {
      "name": "*",
      "desc": "Provides access to the entire system.",
      "label": "* permission"
    },
    {
      "name": "sample_permission_1",
      "desc": "Just a sample permission, change accordingly.",
      "label": "Sample Permission 1"
    }
  ]
}
